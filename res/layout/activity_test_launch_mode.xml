<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/modeTestTextView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="Standard" 
            android:background="@drawable/test_shape_circle"
            android:gravity="center"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/singleTopTextView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="SingleTop"
            android:background="@drawable/test_shape_circle"
            android:gravity="center"
            android:layout_margin="5dp" />
        
        <TextView
            android:id="@+id/singleTaskTextView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="SingleTask" 
            android:background="@drawable/test_shape_circle"
            android:gravity="center"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/singleInstanceTextVeiw"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="SingleInstance"
            android:background="@drawable/test_shape_circle"
            android:gravity="center"
            android:layout_margin="5dp" />        
    </LinearLayout>

</RelativeLayout>